#!/bin/bash

# find out location of binary
DETECT=`dirname "$0"`
# parent is platform directory
DETECT=`dirname "$DETECT"`
# parent is home
export VCT_HOME=`dirname "$DETECT"`

function f() {
  echo $VCT_HOME | sed 's#^/\([a-z]\)\(/\|$\)#\1:\2#' | sed 's|/|\\|g'
}

case `uname -s` in
MINGW*)
SEP=";"
VCT_HOME=`f`
;;
*)
SEP=":"
;;
esac

if [ -d $VCT_HOME/deps/modules ] ; then
  TOOL_HOME=$VCT_HOME/deps
else
  TOOL_HOME=`dirname $VCT_HOME`
  TOOL_HOME=`dirname $TOOL_HOME`
fi
export TOOL_HOME

VCT_PATH=$VCT_HOME/hre/bin
VCT_PATH+=$SEP$VCT_HOME/viper/viper-api/bin
VCT_PATH+=$SEP$VCT_HOME/parsers/bin

VCT_PATH+=$SEP$VCT_HOME/viper/silicon/target/scala-2.12
VCT_PATH+=$SEP$VCT_HOME/viper/silicon/target/scala-2.12/classes

VCT_PATH+=$SEP$VCT_HOME/vercors/target/scala-2.12/classes
VCT_PATH+=$SEP$VCT_HOME/vercors/target/scala-2.12/vercors-assembly-0.1-SNAPSHOT.jar
VCT_PATH+=$SEP$VCT_HOME/vercors/target/lib/*

VMARGS="-Xss128m"
i=0
args=()
for arg in "$@" ; do
  case $arg in
    -X*)
      VMARGS="$VMARGS $arg"
    ;;
    *)
      args[$i]="$arg"
      ((++i))
    ;;
  esac
done

exec java $VMARGS -cp "$VCT_PATH" vct.main.Main "${args[@]}"

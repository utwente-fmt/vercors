//:: cases BlockParallellism
//:: tools silicon
class Ref {
  int x;
  int y;
  int z;
  
  context Perm(x,1)**Perm(y,1)**Perm(z,1\2)**x+y==z;
  void main(int c){
  parallel{
    par
      context Perm(x,1);
      requires x == \old(x);
      ensures x == \old(x)+c;
    {
      x=x+c;
    }
    par
      context Perm(y,1);
      requires y == \old(y);
      ensures y == \old(y)-c;
    {
      y=y-c;
    }
  }
  }
}

function foo(): Int {
  100
}

function bar(): Int {
  true ? 100 : foo()
}

method test() {
  assert bar() >= 0
}


function foo2(): Int {
  true ? 1 : 1 + foo2()
}

method test2() {
  assert foo2() >= 0
}



function foo3(i: Int): Int
  requires 0 < i
{
  0 < i ? 1 : 1 + foo3(i)
}

method test3() {
  var i: Int
  assume 0 < i
  assert foo3(i) > 0
}

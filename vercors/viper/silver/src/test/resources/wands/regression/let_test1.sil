field f: Ref

predicate P(x:Ref) {
  acc(x.f)&&acc(x.f.f) 
}

method t1(x:Ref) {
  package (acc(P(x))) --* let y==(x.f) in acc(y.f) {
      unfold P(x)
  }
  
  /*this wand is ill-defined (if we interpret the let as a ghost operation) 
    in Carbon an error is thrown due to this, but the error message needs 
    to be improved */
}

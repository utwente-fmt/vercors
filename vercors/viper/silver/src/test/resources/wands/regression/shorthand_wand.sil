// 17.07.2017 This test used to test magic wand variables that were removed with the new syntax for magic wands
field f: Int

method test01(x: Ref)
  requires acc(x.f, write)
  ensures acc(x.f, write)
{
  package true --* acc(x.f, write)

  apply true --* acc(x.f, write)
}

method test02(x: Ref)
  requires acc(x.f, write)
  ensures acc(x.f, write)
{
  define A true
  define B acc(x.f, write)

  package A --* B

  apply A --* B
}

method test03(xs: Ref) {
  while (xs != null) {
    package true --* true
  }
}

method test04(xs: Ref) {

  //:: ExpectedOutput(apply.failed:wand.not.found)
  apply true --* true
}

predicate P(x: Ref) { true }

method test05(r: Ref) {
  var x: Ref
  var y: Ref

  inhale acc(P(x)) --* true

  var ox: Ref := x

  inhale acc(P(x))

  y := x
  x := r

  assert acc(P(y))
  apply acc(P(ox)) --* true
}

method test06(r: Ref) {
  var x: Ref
  var y: Ref

  inhale acc(P(x)) --* true
  var oldX: Ref := x

  y := x
  x := r

  package (true) --* true {
      fold P(y)
      apply acc(P(oldX)) --* true
  }
}

adt array {
  pure ref array_loc(array a, int i);
  pure int alen(array a);

  pure array loc_inv_1(ref loc);
  pure int loc_inv_2(ref loc);

  axiom
    (\forall array a; true;
      (\forall int i; true;
        loc_inv_1({:array_loc(a, i):}) == a && loc_inv_2(loc(a, i)) == i));

  axiom (\forall array a; true; {:alen(a):} >= 0);
}

requires 0 <= i && i < alen(a);
pure ref aloc(array a, int i) = array_loc(a, i);